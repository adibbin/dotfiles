[
  {
    "bindings": {
      "ctrl-h": "workspace::ActivatePaneLeft",
      "ctrl-l": "workspace::ActivatePaneRight",
      "ctrl-k": "workspace::ActivatePaneUp",
      "ctrl-j": "workspace::ActivatePaneDown"
    }
  },
  {
    "context": "Editor && VimControl && !VimWaiting && !menu",
    "bindings": {
      "g 0": "outline::Toggle",
      "g r a": "editor::ConfirmCodeAction",
      "g r i": "editor::GoToImplementation",
      "g r I": "editor::GoToImplementationSplit",
      "g r n": "editor::Rename",
      "g r r": "editor::FindAllReferences",
      "shift k": "editor::Hover",
      "space a a": "assistant::ToggleFocus",
      "space space": "file_finder::Toggle",
      "space q": "workspace::CloseInactiveTabsAndPanes",
      "space Q": "workspace::CloseAllItemsAndPanes",
      // Git
      "space g d": "editor::ToggleSelectedDiffHunks",
      "space g r": "git::Restore"
    }
  },
  {
    "context": "EmptyPane || SharedScreen",
    "bindings": {
      "space space": "file_finder::Toggle"
    }
  },
  {
    "context": "AssistantPanel",
    "bindings": {
      "cmd-n": "assistant::NewChat"
    }
  },
  {
    "context": "ProjectPanel && not_editing",
    "bindings": {
      "a": "project_panel::NewFile",
      "d": "project_panel::Delete",
      "r": "project_panel::Rename",
      "shift-a": "project_panel::NewDirectory",
      "shift-o": "project_panel::RevealInFileManager"
    }
  }
]
