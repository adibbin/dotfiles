[
  {
    "bindings": {
      "ctrl-h": "workspace::ActivatePaneLeft",
      "ctrl-j": "workspace::ActivatePaneDown",
      "ctrl-k": "workspace::ActivatePaneUp",
      "ctrl-l": "workspace::ActivatePaneRight"
    }
  },
  // VIM Normal & Visual
  {
    "context": "VimControl && !menu",
    "bindings": {
      "shift k": "editor::Hover",
      "space a a": "agent::ToggleFocus",
      "space space": "file_finder::Toggle",
      "space u h": "editor::ToggleInlayHints",

      // Git
      "space g b": "git::Blame",
      "space g d": "editor::ToggleSelectedDiffHunks",
      "space g r": "git::Restore",

      // Goto
      "g 0": "outline::Toggle",
      "g r a": "editor::ConfirmCodeAction",
      "g r i": "editor::GoToImplementation",
      "g r I": "editor::GoToImplementationSplit",
      "g r n": "editor::Rename",
      "g r r": "editor::FindAllReferences",

      // Panes (i.e. Buffers)
      "space q": "workspace::CloseInactiveTabsAndPanes",
      "space Q": "workspace::CloseAllItemsAndPanes"
    }
  },
  {
    "context": "EmptyPane",
    "bindings": {
      "space a a": "agent::ToggleFocus",
      "space space": "file_finder::Toggle"
    }
  }
]
