{
  // Editor
  "autosave": {
    "after_delay": {
      "milliseconds": 500,
    },
  },
  "relative_line_numbers": "enabled",
  "vim_mode": true,

  // Terminal
  "terminal": {
    "shell": {
      "with_arguments": {
        "program": "/bin/zsh",
        "args": ["--login"],
      },
    },
  },

  // UI
  "tabs": {
    "file_icons": true,
    "git_status": true,
  },
  "theme": {
    "mode": "system",
    "dark": "Catppuccin Mocha",
    "light": "Catppuccin Macchiato",
  },
  "icon_theme": {
    "mode": "system",
    "dark": "Catppuccin Macchiato",
    "light": "Catppuccin Macchiato",
  },
}
